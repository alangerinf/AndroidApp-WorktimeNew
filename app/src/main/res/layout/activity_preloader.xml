    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:visibility="invisible"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loco.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iViewLogoEmpresa"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:src="@drawable/ibao_logo_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tViewlogo_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PODER ATRAVÃ‰S"
        android:visibility="invisible"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/iViewLogoEmpresa"
        app:layout_constraintTop_toBottomOf="@+id/iViewLogoEmpresa" />

    <TextView
        android:id="@+id/tViewlogo_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEL CONOCIMIENTO"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/tViewlogo_p1"
        app:layout_constraintTop_toBottomOf="@+id/tViewlogo_p1" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ltWorld"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:alpha="1"
        android:translationX="-100dp"
        android:translationY="-100dp"
        android:scaleType="centerCrop"
        android:rotation="40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="world_2.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>